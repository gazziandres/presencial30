<h2>Edit </h2>

<%=form_with model: @user, url: update_admin_path, method: :patch, local: true do |f| %>

<div class="field">
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
    <div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %>
</div>

<%if current_user.try(:admin) %>
  <div class="field">
    <%= f.label :admin%>
    <%= f.check_box :admin %>
  </div>
<%end%>

<div class="field">
  <%= f.label :password %> <br />
  <%= f.password_field :password, autocomplete: "off" %>
</div>

<div class="actions">
  <%= f.submit "Update" %>
</div>
<% end %>


<%= link_to "Back", :back %>
